#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.
export DFZSH=$HOME/dev/github/dotfiles

# Set OS X defaults
$DFZSH/osx/set-defaults.sh

# Install homebrew
$DFZSH/homebrew/install.sh 2>&1

# Upgrade homebrew
echo "› brew update"
brew update

# Install software
echo "› $DFZSH/script/install"
$DFZSH/script/install
